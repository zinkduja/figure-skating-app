                                    <TextView
                                        android:id="@+id/textView"
                                        android:layout_width="400px"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/aclonica"
                                        android:padding="20px"
