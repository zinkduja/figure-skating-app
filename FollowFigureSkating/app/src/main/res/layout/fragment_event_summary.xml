<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summaryPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vandy.cs4279.followfigureskating.EventSummaryFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/cell1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Men's Short Program: "
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cell2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Results \n"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/cell3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Men's Free Skating"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cell4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Currently Skating \n"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/cell5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Women's Short Program: "
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cell6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Results \n"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/cell7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Women's Free Skating:"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/cell8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Results"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>
    </LinearLayout>
</FrameLayout>
